@model OtoparkYonetimi.Models.Database.Tbl_Araclar
@{
    ViewBag.Title = "AracGetir";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="container">
        <div class="row">
            <div class="col m12">
                <h4 class="center">Araç Bilgilerini Güncelle</h4>
                <p class="center light">Verilerinizi Güncelleyebilirsiniz.</p>
                <hr />
                @using (Html.BeginForm("AracGuncelle", "Arac", FormMethod.Post))
                {
                    @Html.TextBoxFor(x => x.AracId, new { @class = "validate hide" })
                    <div class="row">
                        <div class="input-field col s6">
                            <i class="material-icons prefix">account_circle</i>
                            @Html.TextBoxFor(x => x.AracPlaka, new { @class = "validate" })
                            <label for="AracPlaka">Plaka</label>
                        </div>
                        <div class="input-field col s6">
                            @Html.TextBoxFor(x => x.AracMarka, new { @class = "validate" })
                            <label for="AracMarka">Marka</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s6">
                            <i class="material-icons prefix">account_circle</i>
                            @Html.TextBoxFor(x => x.AracRenk, new { @class = "validate" })
                            <label for="AracRenk">Renk</label>
                        </div>
                        <div class="input-field col s6">
                            @Html.TextBoxFor(x => x.KisiId, new { @class = "validate" })
                            <label for="KisiId">Arac Sahibi (ID)</label>
                        </div>
                    </div>
                    <div class="col center m12 s12">
                        <button class="waves-effect waves-light btn btn-small red lighten-2"><i class="material-icons left">chevron_right</i><i class="material-icons right">chevron_left</i>Güncelle</button>
                    </div>
                }

            </div>
        </div>
    </div>
