@model OtoparkYonetimi.Models.Database.Tbl_Kisiler
@{
    ViewBag.Title = "KisiGetir";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <div class="row">
        <div class="col m12">
            <h4 class="center">ARAÇ SAHİBİ GÜNCELLE</h4>
            <p class="center light">Verileri Güncelleme Alanı</p>
            <hr />
            @using (Html.BeginForm("KisiGuncelle", "Home", FormMethod.Post))
            {
                @Html.TextBoxFor(x => x.KisiId, new { @class = "validate hide" })
                <div class="row">
                    <div class="input-field col s6">
                        <i class="material-icons prefix">account_circle</i>
                        @Html.TextBoxFor(x => x.TcKimlikNo, new { @class = "validate" })
                        <label for="Tc_Kimlik">Tc Kimlik</label>
                    </div>
                    <div class="input-field col s6">
                        @Html.TextBoxFor(x => x.Ad, new { @class = "validate" })
                        <label for="ad">İsim</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s6">
                        <i class="material-icons prefix">account_circle</i>
                        @Html.TextBoxFor(x => x.Soyad, new { @class = "validate" })
                        <label for="soyad">Soyisim</label>
                    </div>
                    <div class="input-field col s6">
                        @Html.TextBoxFor(x => x.CepTelefonu, new { @class = "validate" })
                        <label for="ceptelefonu">Cep Telefonu</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <i class="material-icons prefix">account_circle</i>
                        @Html.TextBoxFor(x => x.Adres, new { @class = "validate" })
                        <label for="adres">Adres</label>
                    </div>
                </div>
                <div class="col center m12 s12">
                    <button class="waves-effect waves-light btn btn-small red lighten-2"><i class="material-icons left">chevron_right</i><i class="material-icons right">chevron_left</i>Güncelle</button>
                </div>
            }
        </div>
    </div>
</div>