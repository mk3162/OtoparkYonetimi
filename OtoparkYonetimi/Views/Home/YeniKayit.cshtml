
@{
    ViewBag.Title = "YeniKayit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="section">

        <div class="row">
            <div class="col s12 center">
                <h3><i class="mdi-content-send brown-text"></i></h3>
                <h4>KİŞİ KAYIT</h4>
                <p class="center light">Araç sahiplerinin kaydedildiği alan</p>
                <hr class="hr">
                <div class="row">
                    <form class="col s12" method="post">
                        <div class="row">
                            <div class="input-field col s6">
                                <i class="material-icons prefix">account_circle</i>
                                <input name="Ad" type="text" class="validate">
                                <label for="Ad" class="active">Ad</label>
                            </div>
                            <div class="input-field col s6">
                                <input name="Soyad" type="text" class="validate">
                                <label for="Soyad">Soyad</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s6">
                                <i class="material-icons prefix">people_outline</i>
                                <input name="TcKimlikNo" type="number" class="validate">
                                <label for="TcKimlikNo">Tc Kimlik</label>
                            </div>
                            <div class="input-field col s6">
                                <input name="CepTelefonu" type="number" class="validate">
                                <label for="CepTelefonu">Telefon Numarası</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s12">
                                <i class="material-icons prefix">location_on</i>
                                <input name="Adres" type="text" class="validate">
                                <label for="Adres" class="active">Adres Bilgileri</label>
                            </div>
                        </div>
                        <div class="col m12 s12">
                            <button type="submit" class="waves-effect waves-light btn btn-small spinner-blue lighten-2"><i class="material-icons left">chevron_right</i><i class="material-icons right">chevron_left</i>Kayıt Ekle</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

